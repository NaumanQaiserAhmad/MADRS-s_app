<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MADRSApp.MainPage">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label x:Name="QuestionTitle"
               Text="Question Title"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="Black"
               VerticalOptions="Start"
               HorizontalOptions="Center" />

        <Label x:Name="QuestionText"
               Text="Question Text"
               FontSize="16"
               TextColor="Black"
               VerticalOptions="Start"
               HorizontalOptions="Center" />

        <CollectionView x:Name="OptionsList"
                        SelectionMode="Single"
                        VerticalOptions="StartAndExpand"
                        HorizontalOptions="FillAndExpand"
                        SelectionChanged="OptionsList_SelectionChanged"
                        Margin="0,10,0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="10,5" BorderColor="Gray" CornerRadius="10">
                        <Frame.Triggers>
                            <DataTrigger TargetType="Frame" Binding="{Binding IsSelected}" Value="True">
                                <Setter Property="BackgroundColor" Value="LightYellow" />
                            </DataTrigger>
                        </Frame.Triggers>
                        <Label Text="{Binding Text}"
                               FontSize="16"
                               TextColor="Black"
                               VerticalOptions="Center" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="20">
            <Button x:Name="BackButton"
                    Text="Back"
                    IsEnabled="False"
                    Clicked="OnBackClicked"
                    HorizontalOptions="StartAndExpand" />

            <Button x:Name="NextButton"
                    Text="Next"
                    IsEnabled="False"
                    Clicked="OnNextClicked"
                    HorizontalOptions="EndAndExpand" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
